global:
  scrape_interval: 30s

scrape_configs:
  - job_name: "flask"
    metrics_path: /metrics
    static_configs:
      - targets: ["{{ groups["appserver"][0] }}:8000", "{{ groups["appserver"][1] }}:8000"]
        labels:
          instance: flask
  - job_name: nginx
    metrics_path: /prometheus
    scrape_interval: 30s
    static_configs: 
    - targets: ["{{ groups['loadbalancer'][0] }}:9113"]





